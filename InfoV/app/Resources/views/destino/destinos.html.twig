{% block body %}

    <div class="container">
        <div class="cold-md-12">
            {% for des in destinos %}
            {% if des.lugarDestino == id%}
            <div class="page-header margin-none">
                <h1>Destino Encontrado</h1>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Destino</th>
                        <th>Precio</th>
                        <th>Tiempo viaje</th>
                        <th>Accion</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>

                            <tr>
                                <td>{{ des.lugarDestino }}</td>
                                <td>{{ des.precioDestino }}</td>
                                <td>{{ des.tiempoDestino }}</td>
                                <!--
                                El path es el definido en el routing.yml
                                -->
                                <td><a href="{{ path('bus_buses', {'id': des.id} )  }}">Seleccionar</a></td>

                            </tr>



                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {% endif %}

{% endfor %}

    {% if confirmar == 0  %}

        <h1>No hay registros</h1>
    {% endif %}





{% endblock %}

